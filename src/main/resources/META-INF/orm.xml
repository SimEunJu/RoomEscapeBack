<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <named-native-query name="Comment.findAllByPaging" result-class="com.sej.escape.entity.comment.Comment">
        <query>
            <![CDATA[
                select c
                from comment c
                where c.id in (
                    select id
                    from comment ic
                    where ic.referId = ?1
                        and ic.depth = 0
                    order by id desc
                    )
                order by parId desc, seq asc
                limit ?2, ?3
            ]]>
        </query>
    </named-native-query>

</entity-mappings>